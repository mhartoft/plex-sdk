{
    "compilerOptions": {
        "sourceMap": true,
        "allowJs": false,
        "module": "es2015",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "rootDirs": ["src"],
        "baseUrl": ".",
        "paths": {
            "@client": ["src/client"],
            "@errors": ["src/errors"],
            "@models": ["src/models"],
            "@utils": ["src/utils"],
            "@types": ["src/types"]
        }
    },
    "outDir": "build/lib",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "esnext", "dom"],
    "include": ["src/**/*", "**/__tests__", "tests/**/*"],
    "exclude": ["node_modules"]
}
